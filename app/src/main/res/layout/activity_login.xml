<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/loginbackground" />


    <LinearLayout
        android:layout_below="@id/top1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/nunitosanssemibold"
            android:textColor="@color/black"
            android:textSize="55sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/nunitosanslight"
            android:background="@drawable/textshape"
            android:hint="Enter your Email" />

        <EditText
            android:id="@+id/txt_pass"
            android:background="@drawable/textshape"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunitosanslight"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="Enter your password" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:fontFamily="@font/nunitosansregular"
            android:background="@drawable/buttonshape"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/nunitosansregular"
            android:textColor="@color/black"
            android:text="Need Help?"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_registeractivity"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not a member? Register"
        android:fontFamily="@font/nunitosanssemibold"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:layout_margin="30dp"
        />

</RelativeLayout>